{
    "compilerOptions": {
      "target": "ES2020",                // Specifies the JavaScript version for the output (ES2020 includes modern features).
      "module": "CommonJS",              // Use CommonJS module system for compatibility with Node.js.
      "declaration": true,               // Generate .d.ts declaration files for TypeScript consumers.
      "declarationMap": true,            // Include source maps for declaration files to improve debugging.
      "outDir": "./dist",                // Directory where compiled files will be placed.
      "strict": true,                    // Enable strict type-checking for safer code.
      "esModuleInterop": true,           // Ensure compatibility with CommonJS and ES module imports.
      "skipLibCheck": true,              // Skip type checking for declaration files in node_modules.
      "forceConsistentCasingInFileNames": true, // Ensure consistent file naming across the project (case-sensitive).
      "moduleResolution": "node",        // Use Node.js module resolution strategy.
      "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export.
      "sourceMap": true,                 // Generate source maps to assist in debugging.
      "removeComments": true,            // Remove comments from the output files for cleaner build files.
      "resolveJsonModule": true,         // Allow importing JSON files as modules.
      "typeRoots": ["./node_modules/@types"], // Specify the folder where TypeScript looks for type definitions.
      "lib": ["ES2020"]                  // Include modern JavaScript libraries and features up to ES2020.
    },
    "include": [
      "src/**/*.ts"                      // Include all TypeScript files in the src directory and its subdirectories.
    ],
    "exclude": [
      "node_modules",                    // Exclude node_modules to avoid compiling dependencies.
      "dist"                             // Exclude the output directory to prevent recompiling built files.
    ]
  }
  